@using MichaelKjellander.Utils
<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="sg-navbar-brand font-bold text-3xl" href="/">Michael Kjellander</a>
    </div>
</div>

@*<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>*@
<div class="lg:h-20"></div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach (var link in _links)
        {
            <div class="nav-item border-gray-200">
                <NavLink class="nav-link py-2 text-base" href="@link.url" Match="NavLinkMatch.All">
                    @link.text
                </NavLink>
            </div>
        }
    </nav>
    <div><input class="border border-black mt-10" placeholder="Sök ..." type="text"/></div>
</div>



@code {
    private readonly NavLink[] _links = [
        new("Senaste inläggen", RouteUtil.PageHome), 
        new("Mina spel", RouteUtil.PageCategory("mina-spel")), 
        new ("Tv-spelrecensioner", RouteUtil.PageCategory("tv-spelrecensioner")), 
        new ("Övriga inlägg", RouteUtil.PageCategory("okategoriserade")), 
        new ("Kontakt", RouteUtil.PageContact)
    ];
    private struct NavLink(string text, string url)
    {
        public readonly string text = text;
        public readonly string url = url;
    }
}