@* Tabler icons: https://tablericons.com/ *@

<svg xmlns="http://www.w3.org/2000/svg" class="inline icon icon-tabler pb-1 stroke-current"
     width="@(Size ?? defaultSize)" height="@(Size ?? defaultSize)" viewBox="0 0 24 24" stroke-width="1.5"
     fill="none" stroke-linecap="round" stroke-linejoin="round"
     >
    @ChildContent
</svg>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public int? Size { get; set; } = 0;

    private int defaultSize = 22;
}